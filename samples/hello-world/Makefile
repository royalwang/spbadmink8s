#!/usr/bin/make
SHELL=/bin/bash
RUN_APP_ARGS = --rm --user "$(shell id -u):$(shell id -g)"

.DEFAULT_GOAL := help
.PHONY: help

help: ## Show this help
	@printf "\033[33m%s:\033[0m\n" 'Available commands'
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "  \033[32m%-14s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST)

install: ## K8s helm install
	helm install hello-world -n spbadmin --create-namespace ./helm

upgrade: ## K8s helm upgrade
	helm upgrade hello-world -n spbadmin ./helm

uninstall: ## K8s helm uninstall
	helm uninstall hello-world -n spbadmin
